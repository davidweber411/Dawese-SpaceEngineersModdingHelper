<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.wedasoft.SpaceEngineersModdingHelper.views.PreferencesController">
    <children>
        <GridPane hgap="8.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" vgap="8.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="General settings" underline="true">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Label>
                <Label text="Path to modding working space:" GridPane.rowIndex="1" />
                <Label text="Path to Space Engineers &quot;Mod&quot; directory:" GridPane.rowIndex="2" />
                <TextField fx:id="pathToModdingWorkingSpaceTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <TextField fx:id="pathToSpaceEngineersAppdataModsDirectoryTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <HBox alignment="CENTER_RIGHT" spacing="8.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <children>
                        <Button mnemonicParsing="false" onAction="#onSaveButtonClick" text="Save" />
                        <Button mnemonicParsing="false" onAction="#onCancelButtonClick" text="Cancel" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
            </padding>
        </GridPane>
    </children>
</AnchorPane>
